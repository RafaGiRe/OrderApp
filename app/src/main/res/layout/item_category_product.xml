<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rLayout_product">

    <TextView
        android:id="@+id/tView_productName"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tView_productPrice"
        android:textAppearance="?android:attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/tView_productPrice"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tView_productName"
        android:layout_alignBottom="@+id/tView_productName"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceListItem" />




</RelativeLayout>